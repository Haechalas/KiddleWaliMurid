<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.DetailGuruActivity">


    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <ImageView
            android:id="@+id/image_guru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profil_guru_img"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/img_back_detail_guru"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_back" />
        <TextView
            android:id="@+id/text_nama_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:text="Ji Chang Wook"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <!--<ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            -->
        <TextView
            android:id="@+id/text_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Nomor Induk"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text_nik"
            android:fontFamily="@font/roboto_bold"
            android:text="175-150-201"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/text_isi_nik"
            android:fontFamily="@font/roboto_bold"
            android:text="Kontak"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text_kontak"
            android:fontFamily="@font/roboto_bold"
            android:text="+6285779993333"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_phone"

            />

        <TextView
            android:id="@+id/text_jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/text_isi_kontak"
            android:fontFamily="@font/roboto_bold"
            android:text="Jabatan"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text_jabatan"
            android:fontFamily="@font/roboto_bold"
            android:text="Wali Kelas Bintang Kecil"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>