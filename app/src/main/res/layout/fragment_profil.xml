<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ProfilFragment">


    <ImageView
        android:id="@+id/image_murid"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profil_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_nama_murid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Terrick Noah"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/image_murid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/image_ic_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--<ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        -->

    <ImageView
        android:id="@+id/image_ic_camera"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <TextView
            android:id="@+id/text_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/Kelas"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/image_murid"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_isi_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_kelas"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Bintang Kecil"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_kelas"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_isi_kelas"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Tempat Tanggal Lahir"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_isi_kelas"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_isi_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ttl"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="02 Juni 2009 | Bandung"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_ttl"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/text_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_isi_ttl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Alamat"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_isi_ttl"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_isi_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_alamat"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Jl.Ikan pari blok i.5 no.14"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_alamat"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_wali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_isi_alamat"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Wali Murid"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_isi_alamat"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_isi_wali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_wali"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Budi Santoso"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_wali"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintLeft_toRightOf="@id/text_isi_wali"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wali"/>







</androidx.constraintlayout.widget.ConstraintLayout>