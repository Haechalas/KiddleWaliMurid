<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ProfilFragment">

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <ImageView
            android:id="@+id/image_murid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/profil_img"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/text_nama_murid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:text="Terrick Noah"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            />
        <ImageView
            android:id="@+id/image_ic_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <!--<ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            -->
        <TextView
            android:id="@+id/text_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/Kelas"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/text_kelas"
            android:fontFamily="@font/roboto_bold"
            android:text="Bintang Kecil"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_isi_kelas"
            android:fontFamily="@font/roboto_bold"
            android:text="Tempat Tanggal Lahir"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:layout_below="@+id/text_ttl"
            android:fontFamily="@font/roboto_bold"
            android:text="02 Juni 2009 | Bandung"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            />



        <TextView
            android:id="@+id/text_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_isi_ttl"
            android:fontFamily="@font/roboto_bold"
            android:text="Alamat"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/text_alamat"
            android:fontFamily="@font/roboto_bold"
            android:text="Jl.Ikan pari blok i.5 no.14"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_wali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_isi_alamat"
            android:fontFamily="@font/roboto_bold"
            android:text="Wali Murid"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_isi_wali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_wali"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Budi Santoso"
            android:textColor="@color/Grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/ic_phone" />

    </RelativeLayout>





</LinearLayout>