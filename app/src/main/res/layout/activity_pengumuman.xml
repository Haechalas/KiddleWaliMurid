<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_ab_pengumuman"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_back_parenting"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_ab_pengumuman"
        app:layout_constraintStart_toStartOf="@+id/view_ab_pengumuman"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />
    <View
        android:id="@+id/view_bg_box"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/top_blue_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_ab_pengumuman" />

    <!-- Gak paham Search :( -->
    <SearchView
    android:id="@+id/search_pengumuman"
    android:layout_width="match_parent"
    android:layout_height="36dp"
        android:layout_marginTop="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toBottomOf="@id/image_pengumuman"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_pengumuman"
        tools:listitem="@layout/holder_pengumuman" />

    <ImageView
        android:id="@+id/image_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/image_pengumuman"
        app:layout_constraintTop_toBottomOf="@id/view_ab_pengumuman"/>
</androidx.constraintlayout.widget.ConstraintLayout>